<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/myap">

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Login"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="697dp"
        android:layout_below="@id/loginButton"
        android:alpha="0.7"
        android:background="@color/my_primary" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="40sp" <!-- Set the correct text size with proper unit (sp) -->
            android:textStyle="bold"
            />


        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_below="@id/loginButton">

        <!-- Content inside the CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:background="@android:color/white">

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="@color/my_primary"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please login with your information!!"
                android:textSize="20dp"
                android:alpha="0.7"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Email Address"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/outline_done_24"
                android:inputType="textEmailAddress" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>

            <TextView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Password"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/sharp_disabled_visible_24"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_Rememberme"
                    android:layout_width="165dp"
                    android:layout_height="30dp"
                    android:text="Remember Me"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewForgotPassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Forgot Password"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

</RelativeLayout>